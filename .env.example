# ==============================================
# T8D Environment Configuration
# ==============================================
# Copy this file to .env and update the values
# IMPORTANT: Never commit .env file to version control
# ==============================================

# --- PostgreSQL Database Configuration ---
POSTGRES_USER=t8d_user
POSTGRES_PASSWORD=changeme_use_strong_password_here
POSTGRES_DB=t8d_db

# --- Backend Server Configuration ---
SERVER_PORT=3000
NODE_ENV=production

# --- Database Connection URL ---
# For Docker: use 'postgres' as hostname (service name)
# For local development: use 'localhost'
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public

# --- JWT Authentication Secret ---
# Generate a strong secret: openssl rand -base64 32
# Or: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=change-this-to-a-long-random-secret-key

# --- CORS Configuration ---
# Comma-separated list of allowed origins
# For production, set to your frontend URL
# For development, include localhost ports
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:5173,https://your-domain.com

# --- Optional: Production Settings ---
# DB_HOST=postgres
# DB_PORT=5432
# DB_USER=${POSTGRES_USER}
# DB_PASSWORD=${POSTGRES_PASSWORD}
# DB_NAME=${POSTGRES_DB}
