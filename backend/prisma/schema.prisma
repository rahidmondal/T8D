// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  passwordHash String
  name         String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  taskLists    TaskList[]
}

enum TaskStatus {
  not_completed
  completed
}

model TaskList {
  id           String   @id @default(uuid())
  name         String
  description  String?
  lastModified DateTime
  hash         String
  order        Float
  is_deleted   Boolean  @default(false)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks Task[]

  @@index([userId])
  @@index([lastModified])
  @@index([is_deleted])
}

model Task {
  id           String     @id @default(uuid())
  name         String
  description  String?
  status       TaskStatus
  createdAt    DateTime
  lastModified DateTime
  dueDate      DateTime?
  hash         String
  order        Float
  metadata     Json?
  is_deleted   Boolean    @default(false)
  listId String
  list   TaskList @relation(fields: [listId], references: [id], onDelete: Cascade)

  parentId String?
  parent   Task?   @relation("SubTasks", fields: [parentId], references: [id], onDelete: SetNull)
  subTasks Task[]  @relation("SubTasks")

  @@index([listId])
  @@index([parentId])
  @@index([lastModified])
  @@index([is_deleted])
}
