{
  "name": "t8d",
  "private": true,
  "version": "0.1.0",
  "description": "T8D Project Monorepo",
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md,html,css}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md,html,css}\"",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "frontend:test": "vitest run --config frontend/vitest.config.ts frontend/tests",
    "frontend:coverage": "vitest run --config frontend/vitest.config.ts frontend/tests --coverage",
    "backend:test": "vitest run backend/tests",
    "backend:coverage": "vitest run backend/tests --coverage",
    "frontend:dev": "pnpm --filter t8d-frontend dev",
    "frontend:build": "pnpm --filter t8d-frontend build",
    "backend:dev": "pnpm --filter t8d-backend dev",
    "backend:build": "pnpm --filter t8d-backend build",
    "dev:all": "pnpm -r --parallel dev"
  },
  "keywords": [],
  "author": "",
  "license": "",
  "packageManager": "pnpm@10.9.0",
  "devDependencies": {
    "@vitest/coverage-v8": "3.1.4",
    "eslint-config-prettier": "^10.1.2",
    "fake-indexeddb": "^6.0.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "vitest": "^3.1.4"
  }
}
