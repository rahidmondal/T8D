{
  "name": "t8d",
  "private": true,
  "version": "0.0.0",
  "description": "T8D Project Monorepo",
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "test": "pnpm -r test",
    "coverage": "pnpm -r coverage",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md,html,css}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md,html,css}\"",

    "frontend:dev": "pnpm --filter t8d-frontend dev",
    "frontend:build": "pnpm --filter t8d-frontend build",
    "frontend:lint": "eslint --config frontend/eslint.config.js frontend",
    "frontend:lint:fix": "eslint --config frontend/eslint.config.js frontend --fix",
    "frontend:test": "pnpm --filter t8d-frontend test",
    "frontend:preview": "pnpm --filter t8d-frontend preview",

    "backend:dev": "pnpm --filter t8d-backend dev",
    "backend:build": "pnpm --filter t8d-backend build",
    "backend:lint": "eslint --config backend/eslint.config.js backend",
    "backend:lint:fix": "eslint --config backend/eslint.config.js backend --fix",
    "backend:test": "pnpm --filter t8d-backend test",
    "backend:preview": "pnpm --filter t8d-backend preview",
    "dev:all": "pnpm -r --parallel dev"
  },
  "keywords": [],
  "author": "",
  "license": "",
  "packageManager": "pnpm@10.9.0",
  "devDependencies": {
    "@vitest/coverage-v8": "3.1.4",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.1.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.32.1",
    "vitest": "^3.1.4"
  }
}
