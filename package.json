{
  "name": "t8d-monorepo",
  "private": true,
  "version": "0.1.2",
  "description": "T8D Project Monorepo",
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "test": "pnpm -r test",
    "coverage": "pnpm -r coverage",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md,html,css}\"",
    "type-check": "pnpm -r exec tsc --noEmit",
    "check": "pnpm run lint && pnpm run format:check && pnpm run type-check && pnpm run test",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md,html,css}\"",
    "frontend:dev": "pnpm --filter t8d dev",
    "frontend:build": "pnpm --filter t8d build",
    "frontend:lint": "eslint --config frontend/eslint.config.js frontend",
    "frontend:lint:fix": "eslint --config frontend/eslint.config.js frontend --fix",
    "frontend:test": "pnpm --filter t8d test",
    "frontend:preview": "pnpm --filter t8d preview",
    "backend:dev": "pnpm --filter t8d-sync-server dev",
    "backend:build": "pnpm --filter t8d-sync-server build",
    "backend:lint": "eslint --config backend/eslint.config.js backend",
    "backend:lint:fix": "eslint --config backend/eslint.config.js backend --fix",
    "backend:test": "pnpm --filter t8d-sync-server test",
    "backend:preview": "pnpm --filter t8d-sync-server preview",
    "dev:all": "pnpm -r --parallel dev"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.19.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "fake-indexeddb": "^6.2.5",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.7.4",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^6.4.1",
    "vite-plugin-pwa": "^1.2.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "workbox-build": "^7.4.0",
    "workbox-window": "^7.4.0"
  },
  "pnpm": {
    "overrides": {
      "glob@>=10.2.0 <10.5.0": ">=10.5.0",
      "jws@<3.2.3": ">=3.2.3",
      "body-parser@>=2.2.0 <2.2.1": ">=2.2.1"
    }
  }
}
